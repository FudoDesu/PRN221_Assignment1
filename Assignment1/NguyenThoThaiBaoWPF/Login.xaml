<Window x:Class="NguyenThoThaiBaoWPF.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenThoThaiBaoWPF"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Label Content="Email" HorizontalAlignment="Left" Margin="39,62,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="39,149,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="39,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="393" Height="33"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="39,180,0,0" VerticalAlignment="Top" Width="393" Height="33" PasswordChar="*"/>
        <Button x:Name="btnLogin" Content="Login" HorizontalAlignment="Left" Margin="567,116,0,0" VerticalAlignment="Top" Height="59" Width="95" Click="btnLogin_Click"/>
        <Label x:Name="lblWarning" Content="Sample Text" HorizontalAlignment="Left" Margin="39,258,0,0" VerticalAlignment="Top" Foreground="#FFFF0A0A"/>
    </Grid>
</Window>
