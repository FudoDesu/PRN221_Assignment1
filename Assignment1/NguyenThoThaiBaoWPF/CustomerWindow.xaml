        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenThoThaiBaoWPF"
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800">
