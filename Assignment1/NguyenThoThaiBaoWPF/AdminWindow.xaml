<Window x:Class="NguyenThoThaiBaoWPF.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NguyenThoThaiBaoWPF"
        mc:Ignorable="d"
        Title="AdminWindow" Height="611" Width="800">
    <Grid Margin="0,0,0,-6">
        <DataGrid x:Name="dgvCustomerInfo" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,41,0,405" SelectionChanged="dgvCustomerInfo_SelectionChanged"/>
        <Label Content="Customer Information" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Car Information" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgvCarInfo" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,226,0,220" SelectionChanged="dgvCarInfo_SelectionChanged"/>
        <Label Content="Renting Transaction" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgvRentingTransaction" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,411,0,35"/>
    </Grid>
</Window>
